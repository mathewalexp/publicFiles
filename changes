<body>
    <h1>Spin the Bottle Game</h1>
    <input type="text" id="participants" placeholder="Enter names separated by commas">
    <button id="spinBtn" onclick="spinBottle()">Spin</button>
    <div class="container">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/8b/Green_Bottle.jpg/640px-Green_Bottle.jpg" 
             alt="Spinning Bottle" class="bottle" id="bottle">
    </div>
    <h2 id="winner"></h2>

    <script>
        function spinBottle() {
            let names = document.getElementById("participants").value.split(",");
            names = names.map(name => name.trim()).filter(name => name !== "");
            if (names.length === 0) {
                alert("Enter at least one name!");
                return;
            }

            let randomIndex = Math.floor(Math.random() * names.length);
            let randomDegree = 3600 + (randomIndex * (360 / names.length));

            let bottle = document.getElementById("bottle");
            bottle.style.transform = `translate(-50%, -50%) rotate(${randomDegree}deg)`;

            setTimeout(() => {
                document.getElementById("winner").innerHTML = `üèÜ Winner: <b>${names[randomIndex]}</b>!`;
            }, 3000);
        }
    </script>
</body>
</html>
