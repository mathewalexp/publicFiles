<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Upload with Animation</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        #uploadProgress {
            display: none;
            width: 100%;
            height: 20px;
            background-color: #f3f3f3;
            border: 1px solid #ccc;
            border-radius: 5px;
            position: relative;
        }
        #uploadProgress .progress-bar {
            width: 0%;
            height: 100%;
            background-color: #4caf50;
            text-align: center;
            line-height: 20px;
            color: white;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <form id="fileUploadForm">
        <input type="file" id="fileInput" name="file" required><br><br>
        <button type="submit">Upload</button>
    </form>
    <div id="uploadProgress">
        <div class="progress-bar">0%</div>
    </div>

    <script>
        $(document).ready(function () {
            $("#fileUploadForm").on("submit", function (e) {
                e.preventDefault(); // Prevent form from submitting normally

                const formData = new FormData(this); // Create FormData object
                const progressBar = $("#uploadProgress .progress-bar");

                // Show the progress bar
                $("#uploadProgress").show();
                progressBar.width("0%").text("0%");

                // Perform the AJAX request
                $.ajax({
                    url: "/upload", // Replace with your server endpoint
                    type: "POST",
                    data: formData,
                    contentType: false,
                    processData: false,
                    xhr: function () {
                        const xhr = new XMLHttpRequest();

                        // Track upload progress
                        xhr.upload.addEventListener("progress", function (e) {
                            if (e.lengthComputable) {
                                const percentComplete = Math.round((e.loaded / e.total) * 100);
                                progressBar.width(percentComplete + "%").text(percentComplete + "%");
                            }
                        });

                        return xhr;
                    },
                    success: function (response) {
                        alert("File uploaded successfully!");
                        $("#uploadProgress").hide();
                    },
                    error: function (xhr, status, error) {
                        alert("File upload failed: " + error);
                        $("#uploadProgress").hide();
                    }
                });
            });
        });
    </script>
</body>
</html>
