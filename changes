import com.azure.storage.blob._
import com.azure.storage.blob.models._

// Create a BlobServiceClient
val connectionString = "<your-connection-string>"
val blobServiceClient = new BlobServiceClientBuilder().connectionString(connectionString).buildClient()

// Specify the container and blob name
val containerName = "<your-container-name>"
val blobName = "<your-blob-name>"

// Get a reference to the container and blob
val containerClient = blobServiceClient.getBlobContainerClient(containerName)
val blobClient = containerClient.getBlobClient(blobName)

// Read the blob content
val inputStream = blobClient.openQueryInputStream()
val content = scala.io.Source.fromInputStream(inputStream).getLines().mkString("\n")

// Print the content
println(content)

// Close the InputStream
inputStream.close()
