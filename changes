<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spin the Arrow Game</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #ff6a00, #ee0979);
            color: white;
            overflow: hidden;
        }
        h1 {
            text-shadow: 2px 2px 4px black;
        }
        #participants {
            width: 80%;
            padding: 10px;
            font-size: 18px;
            margin: 10px 0;
        }
        .game-area {
            position: relative;
            width: 400px;
            height: 400px;
            margin: 20px auto;
        }
        .arrow {
            width: 50px;
            height: 150px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(0deg);
            transition: transform 5s ease-out;
        }
        .name {
            position: absolute;
            transform-origin: center;
            font-size: 18px;
            font-weight: bold;
            text-shadow: 1px 1px 2px black;
        }
        #spinBtn {
            padding: 15px;
            font-size: 18px;
            background: yellow;
            border: none;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s;
        }
        #spinBtn:hover {
            background: lime;
            transform: scale(1.1);
        }
        #winner {
            font-size: 24px;
            font-weight: bold;
            margin-top: 20px;
            animation: flash 1s infinite alternate;
        }
        @keyframes flash {
            from { color: white; }
            to { color: yellow; }
        }
    </style>
</head>
<body>
    <h1>Spin the Arrow Game</h1>
    <input type="text" id="participants" placeholder="Enter names separated by commas">
    <button id="spinBtn" onclick="setupGame()">Set Names & Spin</button>
    <div class="game-area" id="gameArea">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e3/Red_Arrow_Down.svg/512px-Red_Arrow_Down.svg.png" 
             alt="Spinning Arrow" class="arrow" id="arrow">
    </div>
    <h2 id="winner"></h2>

    <script>
        function setupGame() {
            let names = document.getElementById("participants").value.split(",");
            names = names.map(name => name.trim()).filter(name => name !== "");
            if (names.length === 0) {
                alert("Enter at least one name!");
                return;
            }

            let gameArea = document.getElementById("gameArea");
            let arrow = document.getElementById("arrow");
            let radius = 140; // Distance of names from center
            let angleStep = 360 / names.length;

            // Clear previous names
            document.querySelectorAll(".name").forEach(e => e.remove());

            // Position names in a circle
            names.forEach((name, index) => {
                let angle = index * angleStep;
                let x = 200 + radius * Math.cos(angle * (Math.PI / 180));
                let y = 200 + radius * Math.sin(angle * (Math.PI / 180));

                let nameElement = document.createElement("div");
                nameElement.className = "name";
                nameElement.innerText = name;
                nameElement.style.left = `${x}px`;
                nameElement.style.top = `${y}px`;
                nameElement.style.transform = `rotate(${angle}deg)`;

                gameArea.appendChild(nameElement);
            });

            // Spin the arrow
            spinArrow(names);
        }

        function spinArrow(names) {
            let randomIndex = Math.floor(Math.random() * names.length);
            let spinDuration = Math.random() * 2 + 5; // Between 5 to 7 seconds
            let randomDegree = 3600 + (randomIndex * (360 / names.length));

            let arrow = document.getElementById("arrow");
            arrow.style.transition = `transform ${spinDuration}s ease-out`;
            arrow.style.transform = `translate(-50%, -50%) rotate(${randomDegree}deg)`;

            setTimeout(() => {
                document.getElementById("winner").innerHTML = `üèÜ Winner: <b>${names[randomIndex]}</b>!`;
            }, spinDuration * 1000);
        }
    </script>
</body>
</html>
