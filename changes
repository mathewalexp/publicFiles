val xmlString =
  """
  <people>
      <person>
          <name>Alice</name>
          <age>30</age>
          <city>New York</city>
      </person>
      <person>
          <name>Bob</name>
          <age>25</age>
          <city>San Francisco</city>
      </person>
      <person>
          <name>Charlie</name>
          <age>35</age>
          <city>Los Angeles</city>
      </person>
  </people>
  """

// Convert the XML string to an RDD
val xmlRDD = spark.sparkContext.parallelize(Seq(xmlString))

// Read the XML RDD into a DataFrame
val df: DataFrame = spark.read
  .format("xml")
  .option("rowTag", "person") // Specify the row tag
  .load(xmlRDD)
